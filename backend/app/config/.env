# Database configuration (example for local MySQL)
DB_DIALECT=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=crebas_db
DB_USER=root
DB_PASSWORD=

# Server
PORT=9000
API_PREFIX=/api

# Auth
JWT_SECRET=change_me_in_production

# Whether sequelize.sync should force recreate tables (true/false)
DB_FORCE_SYNC=false

# Auto seed roles + admin at server startup (DEV only)
DB_AUTO_SEED=false
# Auto run ALL seeders in backend/seeders at startup (DEV only)
DB_AUTO_SEED_ALL=false
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
